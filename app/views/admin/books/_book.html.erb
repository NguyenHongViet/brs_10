<tr id="book_<%= book.id %>">
  <td>
    <%= image_tag "#{book.image}", size: "32x32", alt: "Book", class: "img-rounded" %>
  </td>
  <td><%= link_to book.title, edit_admin_book_path(book) %></td>
  <td><%= book.author %></td>
  <td><%= book.average_rating.round 2 if book.reviews.any? %></td>
  <td>
    <%= link_to "edit", edit_admin_book_path(book), class: "btn btn-success" %>
    <%= link_to "delete", admin_book_path(book), method: :delete,
    class: "btn btn-danger", remote: true, data: {confirm: "you sure?"} %>
  </td>
</tr>