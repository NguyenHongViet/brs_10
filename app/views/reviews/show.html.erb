<% provide :title, @review.book.title %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h3>Author</h3>
      <h1>
        <%= gravatar_for @user %>
        <span class="user"><%= link_to @user.name, @user %></span>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <section>
      <h3><%= "Review on #{@review.title}" %></h3>
      <h3><%= "Rating: #{@review.rating}/10" %></h3>
      <p>
        <%= @review.content %>
        <%= link_to "edit", edit_review_path @review %>
      </p>
    </section>
    <section class="comment_form">
      <% unless @comment.nil? %>
        <%= render "comment_form" %>    
      <% end %>
    </section>
    <section>
      <% if @review.comments.any? %>
        <h3>Comments (<%= @review.comments.count %>)</h3>
        <ol class="comments">
          <%= render @comments %>
        </ol>
        <%= will_paginate @comments %>
      <% end %>
    </section>
  </div>
</div>