<% provide :title, @review.book.title %>
<div class="row">
  <aside class="col-md-4">
    
  </aside>
  <div class="col-md-8">
    <section>
      <h3>
        <%= "Review on " %>
        <%= link_to @review.book.title, @review.book %>
      </h3>
      <h3><%= "Rating: #{@review.rating}/10" %></h3>
      <p>
        <%= @review.content %>
        <%= link_to "edit", edit_book_review_path(@review.book, @review) %>
      </p>
    </section>
    <section>
      <% if @review.comments.any? %>
        <h3 id="count">Comments (<%= @review.comments.count %>)</h3>
        <div id="comments" class="comments">
          <%= render @comments %>
        </div>
      <% end %>
    </section>
    <section class="comment_form">
      <% unless @comment.nil? %>
        <div id="comment_form">
          <%= render "comments/form" %>
        </div>
      <% end %>
    </section>
  </div>
</div>