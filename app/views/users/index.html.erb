<% provide :title, "All Users" %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'devise/shared/user_info' %>
    </section>
    <section>
      <%= render 'devise/shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <div div class="col-md-12">
      <%= form_tag users_path, method: 'get', id: "users_search" do %>
        <%= hidden_field_tag :direction, params[:direction] %>
        <%= hidden_field_tag :sort, params[:sort] %>
        <div class="col-md-12 well">
          <div class="col-md-6">
            <label>Search form</label>
          </div>
          <div class="col-md-6">
            <%= text_field_tag :search, params[:search], placeholder: 'Search user by name...' %>
          </div>
        </div>  
        <div class="col-md-12">
          <div id="users_div"><%= render 'list_users' %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>